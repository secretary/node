{
    "name": "@secretary/core",
    "description": "Secrets Manager for NodeJS",
    "version": "4.0.0-alpha.1",
    "repository": {
        "type": "github",
        "url": "https://github.com/secretary/node"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "lint": "eslint --fix --config=eslint.json src",
        "test": "nyc mocha",
        "prepare": "npm run build",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && npx codecov"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "src/**/*.spec.ts"
        ],
        "reporter": [
            "text"
        ],
        "all": true
    },
    "author": "Aaron Scherer <aequasi@gmail.com>",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "lru-cache": "7.14.1",
        "source-map-support": "0.5.21"
    },
    "gitHead": "1a22d1f11bd050b501dd3974228caace9f092e1e",
    "devDependencies": {
        "@types/chai-as-promised": "^7.1.5",
        "@types/eslint": "^8.4.10",
        "@types/lru-cache": "^7.10.10",
        "@types/source-map-support": "^0.5.6",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "typemoq": "^2.1.0"
    }
}
